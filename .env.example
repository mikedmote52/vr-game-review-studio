# VR Game Review Studio Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Claude Code Integration
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///learning_memory/vr_game_review_studio.db

# Web Interface Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_HOST=localhost
FLASK_PORT=5000
FLASK_DEBUG=True

# Parent Notification Settings
PARENT_EMAIL=parent@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# AI Agent Budget Limits (USD)
TOTAL_BUDGET_PER_REVIEW=0.20
GAME_ANALYST_BUDGET=0.07
REVIEW_QUALITY_BUDGET=0.07
AUDIENCE_GROWTH_BUDGET=0.06

# Context Engineering Settings
MAX_CONTEXT_TOKENS_GAME_ANALYSIS=200000
MAX_CONTEXT_TOKENS_REVIEW_QUALITY=150000
MAX_CONTEXT_TOKENS_AUDIENCE_GROWTH=100000
MAX_CONTEXT_TOKENS_SAFETY=50000

# Safety and Content Guidelines
MINIMUM_EDUCATIONAL_VALUE=6.0
MINIMUM_SAFETY_SCORE=8.0
PARENT_APPROVAL_REQUIRED=true
CONTENT_WARNINGS_ENABLED=true

# VR Game Database Settings
MAX_GAMES_CACHE=500
COMPRESSION_RATIO=0.1
AUTO_CLEANUP_DAYS=90

# File Upload Settings
MAX_UPLOAD_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv
UPLOAD_PROCESSING_TIMEOUT=300

# Platform Integration Settings
YOUTUBE_API_KEY=your_youtube_api_key
TIKTOK_API_KEY=your_tiktok_api_key
INSTAGRAM_API_KEY=your_instagram_api_key

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/vr_review_studio.log
PERFORMANCE_MONITORING=true
COST_TRACKING=true

# Development Settings
DEBUG_MODE=true
MOCK_DATA_ENABLED=false
TESTING_MODE=false